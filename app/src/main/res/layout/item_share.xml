<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:minHeight="88dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp">

    <TextView
        android:id="@+id/shareName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/primaryText"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/shareId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/shareName"
        android:layout_below="@id/shareName"
        android:textColor="@color/secondaryText"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/shareValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="@color/primaryText"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/shareChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/shareValue"
        android:drawablePadding="4dp"
        android:textColor="@color/secondaryText"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/shareDateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/shareChange"
        android:textColor="@color/secondaryText"
        android:textSize="12sp" />

</RelativeLayout>
